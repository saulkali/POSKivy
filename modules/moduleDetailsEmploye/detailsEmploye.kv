#:import DetailsEmploye modules.moduleDetailsEmploye
#:import strings common.values.strings
<DetailsEmploye>:
    id:details_employe_box_layout
    orientation:'vertical'
    isEdit: False
    size_hint_y: None
    height: "500dp"
    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height

            AsyncImage:
                id:image_photo
                
            MDTextField:
                id:text_field_photo_url
                hint_text: strings.hint_text_photo_url
                icon_left:"link"
            MDTextField:
                id:text_field_rfc
                hint_text:strings.hint_text_rfc
                icon_left:"email"
            MDTextField:
                id:text_field_first_name
                hint_text: strings.hint_text_first_name
                icon_left:"barcode"
            MDTextField:
                id:text_field_last_name
                hint_text: strings.hint_text_last_name
                icon_left:"book-open-outline"
            MDTextField:
                id:text_field_password
                hint_text:strings.hint_text_password
                icon_left:"book-open-outline"
            MDTextField:
                id:text_field_confirm_password
                hint_text:strings.hint_text_confirm_password
                icon_left:"book-open-outline"
            MDTextField:
                id:text_field_phone
                hint_text: strings.hint_text_number_phone
                icon_left:"phone"
            MDTextField:
                id:text_field_address
                hint_text: strings.hint_text_address
                icon_left:"phone"
            MDTextField:
                id:text_field_email
                hint_text: strings.hint_text_email
                icon_left:"email"
            ToolTipMDDropDownItem:
                id:drop_down_item_permission
                tooltip_text: strings.tooltip_text_permission_user
                text:"administrador"
                on_release: self.set_item("New Item")
<ToolTipMDDropDownItem@MDDropDownItem+MDTooltip>
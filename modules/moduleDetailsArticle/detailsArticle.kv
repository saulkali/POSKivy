#:import DetailsArticleScreen modules.moduleDetailsArticle
#:import strings common.values.strings
<DetailsArticleScreen>:
    id:details_article_box_layout
    orientation:'vertical'
    isEdit: False
    size_hint_y: None
    height: "500dp"
    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height

            AsyncImage:
                id:image_photo
            MDTextField:
                id:text_field_photo_url
                hint_text:strings.hint_text_photo_url
                icon_left:"link"
            MDTextField:
                id:text_field_code_bar
                hint_text:strings.hint_text_code_bar
                icon_left:"barcode"
            MDTextField:
                id:text_field_code_bar_confirm
                hint_text:strings.hint_text_confirm_code_bar
                icon_left:"barcode"
            MDTextField:
                id:text_field_name
                hint_text: strings.hint_text_first_name
                icon_left:"book-open-outline"
            MDTextField:
                id:text_field_description
                hint_text:strings.hint_text_description
                icon_left:"book-open-outline"
            GridLayout:
                cols:2
                size_hint_y:None
                height: self.minimum_height
                spacing: dp(8), dp(8)
                
                MDTextField:
                    id:text_field_amount
                    hint_text: strings.hint_text_amount
                    icon_left: "archive"
                
                MDTextField:
                    id:text_field_price
                    hint_text: strings.hint_text_price
                    icon_left: "cash"
                MDTextField:
                    id: text_field_off_sale
                    hint_text: strings.hint_text_off_sale
                    icon_left: "sale"
                ToolTipMDDropDownItem:
                    id:drop_down_item_mode_shopping
                    tooltip_text: strings.tooltip_text_mode_sale
                    text:"Modo de venta"
                    on_release: self.set_item("New Item")
                ToolTipMDDropDownItem:
                    id:drop_down_item_category
                    tooltip_text: strings.tooltip_text_category
                    text:"Categoria"
                    on_release: self.set_item("New Item")
                
                MDTextField:
                    id: text_field_shelf
                    hint_text: strings.hint_text_shelf
                    icon_left: "table"
                MDTextField:
                    id: text_field_vertical
                    hint_text: strings.hint_text_vertical
                    icon_left: "arrow-right"
                MDTextField:
                    id: text_field_horizontal
                    hint_text: strings.hint_text_horizontal
                    icon_left: "arrow-down"
<ToolTipMDDropDownItem@MDDropDownItem+MDTooltip>
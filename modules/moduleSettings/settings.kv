                                text: "Printer adesive"
                                size_hint_y:None
                                height: dp(80)
                        BoxLayout:
                            orientation:'horizontal'
                            padding:dp(8)
                            
                            MDRelativeLayout:
                                size_hint_y: None
                                height: text_field_usb_printer.height
                                MDTextField:
                                    id:text_field_usb_printer
                                    hint_text:"Direccion usb de impresora"
                                    icon_left:'usb-port'
                                MDIconButton:
                                    icon: "printer-search"

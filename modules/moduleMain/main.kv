#:import images_path kivymd.images_path
#:include modules/moduleShoppingCar/shoppingCar.kv
#:include modules/moduleInventory/inventory.kv
<MainScreen>:
    id:main_screen
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            title:"Carrito De Ventas"
            icon:"shopping"
            right_action_items:
                [
                ["card-search", lambda x: None,  "Buscar Articulo"],
                ["database-cog", lambda x: None,  "Ajustes Del Sistema"]
                ]
        
        MDBottomNavigation:
            selected_color_background: app.theme_cls.bg_light
            text_color_active: 0, 0, 0, 1
            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Ventas'
                icon: 'shopping'
                badge_icon: "numeric-10"
                
                ShoppingCarMDCard:
                    id:card_shopping_car
                
            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Inventario'
                icon: 'barcode'
                badge_icon: "android"

                InventoryMDCard:
                    id:inventory
                

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Empleados'
                icon: 'account'

                MDLabel:
                    text: 'Empleados'
                    halign: 'center'

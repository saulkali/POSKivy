#:import images_path kivymd.images_path
#:import strings common.values.strings

#:include modules/moduleShoppingCar/shoppingCar.kv
#:include modules/moduleInventory/inventory.kv
#:include modules/moduleEmployes/employes.kv
#:include modules/moduleClients/clients.kv
<MainScreen>:
    id:main_screen
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            title: strings.top_app_bar_title_shopping_car
            icon:"shopping"
            right_action_items:
                [
                ["database-cog", lambda x: root.openSettingsScreen() , strings.tooltip_text_settings_system],
                ]
        
        MDBottomNavigation:
            selected_color_background: "#97ecf8"
            text_color_active: 0, 0, 0, 1
            MDBottomNavigationItem:
                name: 'screen 1'
                text: strings.bottom_navigation_item_sales
                icon: 'shopping'
                badge_icon: "numeric-10"
                ShoppingCarMDCard:
                    id:card_shopping_car
                
            MDBottomNavigationItem:
                name: 'screen 2'
                text: strings.bottom_navigation_item_inventory
                icon: 'barcode'
                badge_icon: "android"

                InventoryMDCard:
                    id:inventory
                

            MDBottomNavigationItem:
                name: 'screen 3'
                text: strings.bottom_navigation_item_employes
                icon: 'account'

                EmployesMDCard:
                    id:card_employes
            MDBottomNavigationItem:
                name: 'screen 4'
                text: strings.bottom_navigation_item_clients
                icon: 'account'
                ClientsMDCard:
                    id:card_clients

            MDBottomNavigationItem:
                name: 'screen 5'
                text: strings.bottom_navigation_item_reports
                icon: 'reports'
                MDLabel:
                    text:"clientes"